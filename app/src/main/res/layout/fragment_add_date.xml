<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.amatda.addcarrier.AddDateFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="여행을 떠나는 날짜와\n시간을 알려주세요!"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:padding="40dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="언제 여행을 떠나세요?"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/editAddDateDay"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:focusable="false"
            android:clickable="true"
            android:hint="날짜를 입력해주세요."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="떠나는 여행지의 날씨를 알려드릴게요."
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="집에서 몇시에 나갈 예정인가요?"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/editAddDateTime"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:focusable="false"
            android:clickable="true"
            android:hint="날짜를 입력해주세요."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나가는 시간에 맞춰 빠진 준비물이 없는지\n확인 알람을 보내드릴게요."
            android:textSize="15dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/buttonAddDateNext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="다음"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_default"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>
